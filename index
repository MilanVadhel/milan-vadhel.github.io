    <!-- Data & Scripts -->
    <script>
      // Replace with your real data once and you're done ‚úÖ
      const DATA = {
        githubUsername: "MilanVadhel",
        name: "Milan",
        title: "React Native & Android Engineer",
        email: "vadhermilan64526@gmai.com",
        location: "Ahmedabad, IN",
        avatar: "https://unavatar.io/github/your-github-username",
        resumeUrl: "resume.pdf",
        social: {
          github: "https://github.com/MilanVadhel",
          linkedin: "https://www.linkedin.com/in/milan-vadhel-4484b7141/",
        },
        projects: [
          {
            name: "Dating App (RN + Firebase)",
            description:
              "Bidirectional circular feed, chat with WebSockets, push notifications, and media uploads.",
            tags: ["React Native", "TypeScript", "Firebase", "WebSockets"],
            demo: "",
          },
          {
            name: "Warehouse App (Offline-First)",
            description:
              "Realm DB local-first with background sync to MongoDB, barcode scanning, queue processing.",
            tags: ["Realm", "MongoDB", "Android", "Clean Architecture"],
            demo: "",
          },
          {
            name: "Food Ordering App",
            description:
              "Expo + RTK Query + Stripe test integration, optimized list rendering & skeletons.",
            tags: ["Expo", "Redux Toolkit", "Stripe"],
            repo: "https://github.com/your-github-username/food-ordering",
            demo: "",
          },
        ],
      };

      // Populate dynamic bits
      document.getElementById("year").textContent = new Date().getFullYear();

      // Header avatar + name
      const avatarImg = document.querySelector("header img");
      if (avatarImg) avatarImg.src = DATA.avatar;
      document.title = `${DATA.name} ‚Ä¢ ${DATA.title}`;

      // Social links
      document
        .querySelectorAll('a[href="https://github.com/"]')
        .forEach((a) => (a.href = DATA.social.github));
      document
        .querySelectorAll('a[href="https://www.linkedin.com/"]')
        .forEach((a) => (a.href = DATA.social.linkedin));

      // Resume link
      document
        .querySelectorAll('a[href="resume.pdf"]')
        .forEach((a) => (a.href = DATA.resumeUrl));

      // Projects grid
      const grid = document.getElementById("project-grid");
      DATA.projects.forEach((p) => {
        const el = document.createElement("article");
        el.className =
          "rounded-2xl border border-slate-200 dark:border-slate-800 p-5 flex flex-col";
        el.innerHTML = `
        <h3 class="font-semibold text-lg">${p.name}</h3>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">${
          p.description
        }</p>
        <div class="mt-3 flex flex-wrap gap-2">${p.tags
          .map(
            (t) =>
              `<span class='text-xs px-2 py-1 rounded-lg border border-slate-200 dark:border-slate-700'>${t}</span>`
          )
          .join("")}</div>
        <div class="mt-4 flex gap-3 mt-auto">
          ${
            p.demo
              ? `<a class="inline-flex items-center gap-1 text-sm hover:text-primary-600" href="${p.demo}">üîó Live</a>`
              : ""
          }
        </div>
      `;
        grid.appendChild(el);
      });

      // Theme toggle
      const prefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)"
      ).matches;
      const storedTheme = localStorage.getItem("theme");
      const root = document.documentElement;
      const label = document.getElementById("theme-label");

      function applyTheme(mode) {
        if (mode === "dark") {
          root.classList.add("dark");
          label.textContent = "Light";
        } else {
          root.classList.remove("dark");
          label.textContent = "Dark";
        }
      }
      applyTheme(storedTheme || (prefersDark ? "dark" : "light"));

      document.getElementById("theme-toggle").addEventListener("click", () => {
        const nowDark = !root.classList.contains("dark");
        applyTheme(nowDark ? "dark" : "light");
        localStorage.setItem("theme", nowDark ? "dark" : "light");
      });
    </script>
